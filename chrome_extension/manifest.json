{
  "name": "DOM Tree Analyzer",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Injects BuildDOMTree.js script into every page to enable DOM tree analysis",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "DOM Tree Analyzer",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["buildDOMTree.js", "pageScript.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 